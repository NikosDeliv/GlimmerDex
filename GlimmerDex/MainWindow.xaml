<Window x:Class="GlimmerDex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GlimmerDex" Height="600" Width="1000">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Sidebar -->
		<StackPanel Grid.Column="0" Background="#2B2B2B" Margin="10">
			<TextBlock Text="GlimmerDex" FontSize="24" Foreground="White" Margin="0,0,0,20" TextAlignment="Center"/>
			<Button Content="Home" Click="HomeButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
			<Button Content="Shiny Pokémon" Click="ShinyPokemonButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
			<Button Content="History" Click="HistoryButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
		</StackPanel>

		<!-- Home Content -->
		<Grid x:Name="homeGrid" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="10">
			<!-- Search TextBox -->
			<TextBox x:Name="pokemonSearchBox"
                     HorizontalAlignment="Left"
                     Height="23"
                     Margin="10,10,0,0"
                     VerticalAlignment="Top"
                     Width="200"
                     TextChanged="PokemonSearchBox_TextChanged"
                     VerticalContentAlignment="Center" />

			<!-- ScrollViewer for infinite scroll -->
			<ScrollViewer HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="200" Height="Auto" VerticalScrollBarVisibility="Auto">
				<!-- StackPanel for showing the Pokémon list with Image and Name -->
				<ItemsControl ItemsSource="{Binding DisplayedPokemonList}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal" Margin="5" MouseLeftButtonUp="PokemonItem_Click">
								<Image Source="{Binding Icon}" Width="30" Height="30" Margin="0,0,10,0"/>
								<TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
							</StackPanel>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>

			<!-- Label to display the current Pokémon being hunted -->
			<Label x:Name="currentPokemonLabel"
                   Content="Currently hunting: None"
                   HorizontalAlignment="Left"
                   Margin="230,40,0,0"
                   VerticalAlignment="Top"
                   FontSize="16" FontWeight="Bold"/>

			<!-- Image to display the icon of the selected Pokémon -->
			<Image x:Name="selectedPokemonIcon"
                   Width="100"
                   Height="100"
                   HorizontalAlignment="Left"
                   Margin="230,70,0,0"
                   VerticalAlignment="Top"/>

			<!-- Panel for hunting methods with labels and buttons arranged in a grid -->
			<StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="230,200,0,0" VerticalAlignment="Top" Width="400" >
				<!-- Random Encounters -->
				<StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
					<Label x:Name="encounterCountLabel" Content="Encounters: 0" Width="180" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					<Button x:Name="addEncounterButton" Content="Add Encounter" Width="150" Click="AddEncounterButton_Click" IsEnabled="False"/>
				</StackPanel>

				<!-- Eggs Hatched (Masuda Method) -->
				<StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
					<Label x:Name="eggsCountLabel" Content="Eggs Hatched: 0" Width="180" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					<Button x:Name="addEggButton" Content="Add Egg Hatched" Width="150" Click="AddEggButton_Click" IsEnabled="False"/>
				</StackPanel>

				<!-- Soft Resets -->
				<StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
					<Label x:Name="softresetsCountLabel" Content="Soft Resets: 0" Width="180" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					<Button x:Name="addSoftResetsButton" Content="Add Soft Reset" Width="150" Click="AddSoftResetsButton_Click" IsEnabled="False"/>
				</StackPanel>

				<!-- SOS Chaining -->
				<StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
					<Label x:Name="sosCountLabel" Content="SOS Chaining: 0" Width="180" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					<Button x:Name="addSOSButton" Content="Add SOS Encounter" Width="150" Click="AddSOSButton_Click" IsEnabled="False"/>
				</StackPanel>

				<!-- Catch Combo -->
				<StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
					<Label x:Name="catchComboCountLabel" Content="Catch Combo: 0" Width="180" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					<Button x:Name="addCatchComboButton" Content="Add Catch Combo" Width="150" Click="AddCatchComboButton_Click" IsEnabled="False"/>
				</StackPanel>

				<!-- Outbreaks -->
				<StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
					<Label x:Name="outbreakCountLabel" Content="Outbreaks: 0" Width="180" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					<Button x:Name="addOutbreakButton" Content="Add Outbreak" Width="150" Click="AddOutbreakButton_Click" IsEnabled="False"/>
				</StackPanel>

				<!-- DexNav Encounters -->
				<StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
					<Label x:Name="dexNavCountLabel" Content="DexNav Encounters: 0" Width="180" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					<Button x:Name="addDexNavButton" Content="Add DexNav" Width="150" Click="AddDexNavButton_Click" IsEnabled="False"/>
				</StackPanel>

				<!-- Game Selector -->
				<StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
					<Label Content="Game:" Width="60" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					<ComboBox x:Name="gameSelector" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,0">
						<ComboBoxItem Content="Pokemon Red" />
						<ComboBoxItem Content="Pokemon Blue" />
						<ComboBoxItem Content="Pokemon Green" />
						<ComboBoxItem Content="Pokemon Yellow" />
						<ComboBoxItem Content="Pokemon Gold" />
						<ComboBoxItem Content="Pokemon Silver" />
						<ComboBoxItem Content="Pokemon Crystal" />
						<ComboBoxItem Content="Pokemon Ruby" />
						<ComboBoxItem Content="Pokemon Sapphire" />
						<ComboBoxItem Content="Pokemon Emerald" />
						<ComboBoxItem Content="Pokemon FireRed" />
						<ComboBoxItem Content="Pokemon LeafGreen" />
						<ComboBoxItem Content="Pokemon Diamond" />
						<ComboBoxItem Content="Pokemon Pearl" />
						<ComboBoxItem Content="Pokemon Platinum" />
						<ComboBoxItem Content="Pokemon HeartGold" />
						<ComboBoxItem Content="Pokemon SoulSilver" />
						<ComboBoxItem Content="Pokemon Black" />
						<ComboBoxItem Content="Pokemon White" />
						<ComboBoxItem Content="Pokemon Black 2" />
						<ComboBoxItem Content="Pokemon White 2" />
						<ComboBoxItem Content="Pokemon X" />
						<ComboBoxItem Content="Pokemon Y" />
						<ComboBoxItem Content="Pokemon Omega Ruby" />
						<ComboBoxItem Content="Pokemon Alpha Sapphire" />
						<ComboBoxItem Content="Pokemon Sun" />
						<ComboBoxItem Content="Pokemon Moon" />
						<ComboBoxItem Content="Pokemon Ultra Sun" />
						<ComboBoxItem Content="Pokemon Ultra Moon" />
						<ComboBoxItem Content="Pokemon: Let's Go, Pikachu!" />
						<ComboBoxItem Content="Pokemon: Let's Go, Eevee!" />
						<ComboBoxItem Content="Pokemon Sword" />
						<ComboBoxItem Content="Pokemon Shield" />
						<ComboBoxItem Content="Pokemon Brilliant Diamond" />
						<ComboBoxItem Content="Pokemon Shining Pearl" />
						<ComboBoxItem Content="Pokemon Legends: Arceus" />
						<ComboBoxItem Content="Pokemon Scarlet" />
						<ComboBoxItem Content="Pokemon Violet" />
					</ComboBox>
				</StackPanel>

				<!-- Total Shinies Counter -->
				<StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
					<Label x:Name="totalShiniesLabel" Content="Total Shinies: 0" Width="180" HorizontalAlignment="Left" VerticalAlignment="Center"/>
				</StackPanel>

				<!-- Button to mark as shiny with spacing -->
				<Button x:Name="shinyButton"
                        Content="Mark as Shiny"
                        Width="150"
                        Margin="0,10,0,0"
                        Click="ShinyButton_Click" HorizontalAlignment="Center" IsEnabled="False"/>
			</StackPanel>
		</Grid>

		<!-- Shiny Pokémon Content -->
		<Grid x:Name="shinyGrid" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="10" Visibility="Collapsed">
			<ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto">
				<ItemsControl x:Name="shinyPokemonList" ItemsSource="{Binding DisplayedPokemonList}" MouseLeftButtonUp="ShinyPokemon_Click">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="5">
								<StackPanel>
									<Image Source="{Binding ShinyIcon}" Width="50" Height="50" Margin="0,0,0,5"/>
									<TextBlock Text="{Binding Name}" FontWeight="Bold" TextAlignment="Center"/>
									<ItemsControl ItemsSource="{Binding GameEncounters}">
										<ItemsControl.ItemTemplate>
											<DataTemplate>
												<StackPanel>
													<TextBlock Text="{Binding Key}" FontWeight="Bold"/>
													<TextBlock Text="{Binding Value.Encounters, StringFormat='Encounters: {0}'}"/>
													<TextBlock Text="{Binding Value.EggsHatched, StringFormat='Eggs Hatched: {0}'}"/>
													<TextBlock Text="{Binding Value.SoftResets, StringFormat='Soft Resets: {0}'}"/>
													<TextBlock Text="{Binding Value.SOSEncounters, StringFormat='SOS Encounters: {0}'}"/>
													<TextBlock Text="{Binding Value.CatchComboEncounters, StringFormat='Catch Combo: {0}'}"/>
													<TextBlock Text="{Binding Value.OutbreakEncounters, StringFormat='Outbreaks: {0}'}"/>
													<TextBlock Text="{Binding Value.DexNavEncounters, StringFormat='DexNav: {0}'}"/>
												</StackPanel>
											</DataTemplate>
										</ItemsControl.ItemTemplate>
									</ItemsControl>
								</StackPanel>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</Grid>
	</Grid>
</Window>